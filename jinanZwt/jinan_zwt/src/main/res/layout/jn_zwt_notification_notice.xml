<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notification_left_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notification_notice_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="紧急重要通知"
                        android:textColor="@color/color_484848"
                        android:textSize="@dimen/text_17" />

                    <TextView
                        android:id="@+id/notification_notice_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="张三"
                        android:textColor="@color/color_9f9f9f"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/notification_notice_cotent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="3123123123"
                        android:textColor="@color/color_9f9f9f"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/notification_notice_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_33"
                android:gravity="center_horizontal"
                android:text="1018年11月13日"
                android:textColor="@color/color_9f9f9f"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>