<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">
    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginLeft="@dimen/dp_16"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/jn_zwt_rectangle"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:src="@drawable/jn_zwt_search_jn" />

            <com.zt.capacity.common.view.LastEditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_weight="1"
                android:background="@null"
                android:hint="我的工地"
                android:textColor="@color/color_767676"
                android:textSize="@dimen/text_13" />

            <ImageView
                android:id="@+id/voice_jn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_6"
                android:visibility="gone"
                android:src="@drawable/jn_zwt_voice_jn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_484848"
                android:textSize="@dimen/text_19"
                android:textStyle="bold"
                android:text="@string/app_name"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/home_fgmt_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/jn_zwt_main_my_n" />

        <ImageView
            android:id="@+id/sweep_jn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:src="@drawable/jn_zwt_sweep_jn" />

        <RelativeLayout
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_11">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/jn_zwt_information_jn" />
            <ImageView
                android:id="@+id/unread_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hong_dian"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_18"
                />
        </RelativeLayout>

    </LinearLayout>

    <WebView
        android:id="@+id/myweb"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>