<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voice_backimg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_mask"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_41"
            android:text="@string/voice_can_say"
            android:textColor="@color/voice_young"
            android:textSize="@dimen/text_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_31"
            android:text="@string/my_licence"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_31"
            android:text="@string/my_car_position"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_31"
            android:text="@string/my_illegal"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_91">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/voice_pop_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"

            android:src="@drawable/voice_button_strat" />
    </LinearLayout>
</LinearLayout>