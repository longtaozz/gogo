<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_E8E8E8"
    android:orientation="vertical">

    <include layout="@layout/base_head" />

    <com.zt.capacity.common.view.LoadListView
        android:id="@+id/notification_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_7"
        android:cacheColorHint="#00000000"
        android:dividerHeight="@dimen/dp_8"
        android:divider="#00000000"
        android:listSelector="#00000000"></com.zt.capacity.common.view.LoadListView>

    <!--无消息-->
    <LinearLayout
        android:id="@+id/no_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_56"
            android:src="@drawable/jn_yunshu_no_msg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/text_17"
            android:layout_marginTop="@dimen/dp_17"
            android:text="暂无消息"/>
    </LinearLayout>
</LinearLayout>